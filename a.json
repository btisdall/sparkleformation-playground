{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "KeyPair": {
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance",
      "Type": "String",
      "Default": "bentis-no-pp"
    },
    "Environment": {
      "Description": "Environment eg \"test\", \"production\"",
      "Type": "String",
      "AllowedValues": [
        "test",
        "staging",
        "production"
      ]
    },
    "Role": {
      "Description": "Role eg \"web\", \"cache\"",
      "Type": "String",
      "Default": "session-cache"
    },
    "KeyName": {
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance",
      "Type": "String",
      "Default": "bentis-no-pp"
    }
  },
  "Description": "Stack for babel-session-cache, a short-term data store",
  "Mappings": {
    "RegionMap": {
      "us-east-1": {
        "ami": "ami-eab68a82"
      },
      "us-west-1": {
        "ami": "ami-951945d0"
      },
      "us-west-2": {
        "ami": "ami-ff6182bb"
      },
      "eu-west-1": {
        "ami": "ami-4d5b707d"
      }
    }
  },
  "Resources": {
    "BentisTestLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "Ami"
          ]
        },
        "InstanceType": {
        },
        "Config": "public_ips",
        "AssociatePublicIpAddress": "public_ips",
        "IamInstanceProfile": "babel-instance-bootstrap",
        "KeyName": {
          "Ref": "KeyName"
        },
        "SecurityGroups": [
          {
            "Ref": "sg-efd5ac8b"
          }
        ],
        "UserData": {
          "Fn::Base64": "#!/usr/bin/env bash\napt-get update\napt-get -y install python-pip\npip install awscli\naws s3 cp s3://babel-instance-bootstrap/babel_provisioning_test.sh /tmp/babel_provisioning_test.sh\nbash /tmp/babel_provisioning_test.sh\n"
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            },
            "PropagateAtLaunch": true
          },
          {
            "Key": "Role",
            "Value": {
              "Ref": "Role"
            },
            "PropagateAtLaunch": true
          },
          {
            "Key": "Department",
            "Value": "web",
            "PropagateAtLaunch": true
          },
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  "bentis",
                  {
                    "Ref": "Role"
                  },
                  {
                    "Ref": "Environment"
                  },
                  "other"
                ]
              ]
            },
            "PropagateAtLaunch": true
          },
          {
            "Key": "Project",
            "Value": "babel",
            "PropagateAtLaunch": true
          }
        ]
      }
    }
  },
  "Outputs": {
    "InstanceId": {
      "Description": "Name of the lauch configuration",
      "Value": {
        "Ref": "LaunchConfig"
      }
    }
  }
}
